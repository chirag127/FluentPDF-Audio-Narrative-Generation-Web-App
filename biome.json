{
    "$schema": "https://biomejs.dev/schemas/1.5.3/schema.json",
    "organizeImports": {
        "enabled": true
    },
    "linter": {
        "enabled": true,
        "rules": {
            "recommended": true,
            "complexity": {
                "noForEach": "error",
                "noBannedTypes": "error"
            },
            "correctness": {
                "noUnusedVariables": "error",
                "noUnusedImports": "error"
            },
            "style": {
                "noNonNullAssertion": "error",
                "useBlockStatements": "error"
            },
            "suspicious": {
                "noExplicitAny": "error",
                "noConsoleLog": "error"
            }
        }
    },
    "formatter": {
        "enabled": true,
        "indentStyle": "space",
        "indentWidth": 4,
        "lineWidth": 100
    },
    "files": {
        "ignore": ["src/style.css", "dist", "node_modules", "coverage", "**/*.min.js"]
    }
}
